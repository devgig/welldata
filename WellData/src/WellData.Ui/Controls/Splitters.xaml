                                    Fill="White" />
                                <Rectangle
                                    Canvas.Left="8"
                                    Canvas.Top="0"
                                    Width="2"
                                    Height="2"
                                    Fill="White" />
                                <Rectangle
                                    Canvas.Left="12"
                                    Canvas.Top="0"
                                    Width="2"
                                    Height="2"
                                    Fill="White" />
                                <Rectangle
                                    Canvas.Left="16"
                                    Canvas.Top="0"
                                    Width="2"
                                    Height="2"
                                    Fill="White" />
                            </Canvas>
                        </Border>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
